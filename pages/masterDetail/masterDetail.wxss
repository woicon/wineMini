.m-name {
    font-size: 34rpx;
    color: #222;
    margin-bottom: 14rpx;
}

.m-tag {
    display: flex;
}

.m-tag>view {
    line-height: 44rpx;
    background: #ebebeb;
    color: #030303;
    padding: 0 24rpx;
    border-radius: 90px;
    font-size: 24rpx;
    margin-right: 10rpx;
}

.m-img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100px;
    overflow: hidden;
    margin-right: 20rpx;
}

.m-img image {
    width: 150rpx;
    height: 150rpx;
}

.m-item {
    background: #fff;
    display: flex;
    align-items: center;
    margin: 30rpx;
    border-radius: 16rpx;
}

.m-cont {
    flex: 1;
}

.m-bar{
    display: flex;
    justify-content:space-between;
    margin:30rpx 0;
    color:#9B9B9B;
    font-size:25rpx;
}

.m-like{
    font-size:40rpx;
    color:#333;
    margin-left:20rpx;
}
.m-intro{
    font-size:26rpx;
    line-height:1.6;
    color:#333;
}

.m-head{
    padding:10rpx 30rpx ;
}

.c-item{
    display: flex;
    align-items:center;
    padding:30rpx;
}
.c-title{
    font-size:30rpx;
    color:#333;
}
.c-cont{
    display: flex;
    flex-direction: column;
    align-items:left;
    justify-content:space-between;
    flex: 1;
    height:180rpx;
}
.c-sub{
    font-size:24rpx;
    color:#9B9B9B;
}
.price-through{
    font-size:24rpx;
}
.c-img{
    width:230rpx;
    height:180rpx;
    margin-right:20rpx;
    border-radius:10rpx;
    overflow:hidden;
    position:relative;
    
}
.c-img .ico{
    position: absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    display: flex;
    align-items:center;
    justify-content:center;
    font-size:80rpx;
    color:#fff;

}
.c-img image{
    width:230rpx;
    height:180rpx;

}
.m-bar-like{
    display: flex;
    align-items:center;
    border-right:1px solid #eee;
    width:50%;
}
.c-add{
    background: #AF1654;
    box-shadow: 0 5px 12px 0 rgba(185,146,162,0.50);
    color:#fff;
    border-radius:100px;
    width:62rpx;
    height:62rpx;
    display: flex;
    align-items:center;
    justify-content:center;
    font-size:38rpx;
}

.c-sales{
    font-size:24rpx;
    color:#999;
}