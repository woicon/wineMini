.copuon-item {
    display: flex;
    height: 200rpx;
    flex-wrap: wrap;
    background: #fff;
    box-shadow: 2px 3px 8px 0 #ebebeb;
    margin: 30rpx;
    border-radius: 10rpx;
}

.c-button {
    width: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 200rpx;
}

.c-num {
    font-size: 20rpx;
    margin-top:10rpx;
}

.c-share {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 22rpx;
    margin-top: 20rpx;
}

.c-share .ico {
    font-size: 44rpx;
}

.c-cont {
    flex: 1;
    padding: 0 30rpx;
}

.c-title {
    font-size: 32rpx;
    color: #333;
}

.c-info {
    color: #999;
    font-size: 22rpx;
}

.c-head {
    background: #af1654 url(data:image/png;base64,) repeat-y left;
    background-size: 12rpx;
    color: #fff;
    width: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 30rpx;
}

.c-head text {
    font-size: 88rpx;
}

.c-price {
    display: flex;
    align-items: center;
}
.tab{
    display: flex;
    align-items:center;
    font-size:34rpx;
    justify-content:center;
}
.tab>view{
    padding:28rpx 30rpx;
    position:relative;
}
.tab>view.active{
    font-weight:800;
    color:#af1654;
}
.tab>view.active::before{
    width:58rpx;
    height:6rpx;
    background:#af1654;
    border-radius:90px;
    content: '';
    display:block;
    position:absolute;
    left:50%;
    margin-left:-29rpx;
    bottom:0;
}