.list{
    margin: 30rpx;
    border-radius: 10rpx;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.08);

}
.list>view {
    display: flex;
    align-items: center;
    justify-content:space-between;
    position:relative;
    padding:34rpx 20rpx;
  
}
.list>view image {
    width: 36rpx;
    height: 36rpx;
    margin-right:15rpx;
}
.list>view>view{
    flex:1;
    display: flex;
    align-items:center;
    font-size:26rpx;
    color:#555;
}
.list>view::after{
    content: '';
    display: block;
    width:10rpx;
    height:10rpx;
    border:2px solid #eee;
    border-left:none;
    margin-right:20rpx;
    border-bottom:none;
    transform:rotate(45deg);
}
.list>view::before{
    content: '';
    display: block;
    position:absolute;
    left:-50%;
    right:-50%;
    height:1px;
    bottom:0;
    border-bottom:1px slid #ccc;
    transform:scaleX(.5);
}
