.member-head {
    background-image: linear-gradient(0deg, rgb(175, 22, 84) 0%, rgb(215, 49, 116) 100%);
    height: 300rpx;
    position: relative;

}
.member-head::after{
    content: '';
    display: block;
    background-image:gradient( 0deg, rgb(175,22,84) 0%, rgb(215,49,116));
    position: absolute;
    border-radius:100%;
    height:90px;
    bottom:-45rpx;
    left:0;
    right:0;
}
.member{
    padding-left:30rpx;
    padding-top:50rpx;
}
.user-vip{
    background:#333;
    border-radius:90px 0 0 90px;
    display: flex;
    font-size:25rpx;
    align-items:center;
    height:60rpx;
    padding-left:20rpx;
    color:#faceae;
    padding-right:20rpx;

}
.user-vip image {
    width: 34rpx;
    height: 32rpx;
    margin-right:10rpx;
}

.user-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 90px;
    border: 2px solid #fff;
    margin-right:20rpx;
}
.user-intro{
    font-size:26rpx;
}
.member-info {
    color: #fff;
}

.list {
    margin: 30rpx;
    border-radius: 10rpx;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.08);
}

.list>view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding: 34rpx 20rpx;
}

.list>view image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
}

.list>view>view {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #555;
}

.list>view::after {
    content: '';
    display: block;
    width: 10rpx;
    height: 10rpx;
    border: 2px solid #eee;
    border-left: none;
    margin-right: 20rpx;
    border-bottom: none;
    transform: rotate(45deg);
}

.list>view::before {
    content: '';
    display: block;
    position: absolute;
    left: -50%;
    right: -50%;
    height: 1px;
    bottom: 0;
    border-bottom: 1px slid #ccc;
    transform: scaleX(0.5);
}

.member-list {
    margin-top:120rpx;
}

.member-col {
    border-radius: 10rpx;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 30px 0px rgba(0, 0, 0, 0.08);
    position: absolute;
    bottom: -70rpx;
    left: 30rpx;
    right: 30rpx;
}

.member-col>view {
    text-align: center;
    font-size: 26rpx;
    width: 33.33333333333%;
    color: #999;
    padding: 20rpx 0;
}

.member-col>view>view {
    font-size: 36rpx;
    color: #333;
}
