.p-img{
    width:750rpx;
    height:420rpx;
    vertical-align:bottom;
}
.p-bar{
    background:rgba(0, 0, 0, .5);
    color:#fff;
    display: flex;
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    z-index:1;
    padding:30rpx;
    font-size:24rpx;
    align-items:center;
}
.p-head{
    position:relative;
}

.p-name{
    font-size:32rpx;
    margin-right:20rpx;
}

.p-intro{
    font-size:26rpx;
    line-height:1.8;
    padding:0 30rpx;
    text-align:justify;
}
.p-skill{
    display: flex;
    padding:0 30rpx;
    font-size:26rpx;
}
.p-skill-item{
    background:#f3f3f3;
    color:#444;
    text-align:center;
    line-height:50rpx;
    border-radius:4rpx;
    margin:20rpx 0;
}
.p-skill-child{
    width:33.333333%;
    margin-right:20rpx;
    text-align:center;
}
.p-skill-title{
    font-weight:800;
    line-height:60rpx;
}


.c-item{
    display: flex;
    align-items:center;
    padding:30rpx;
}
.c-title{
    font-size:30rpx;
    color:#333;
}
.c-cont{
    display: flex;
    flex-direction: column;
    align-items:left;
    justify-content:space-between;
    flex: 1;
    height:180rpx;
}
.c-sub{
    font-size:24rpx;
    color:#9B9B9B;
}
.price-through{
    font-size:24rpx;
}
.c-img{
    width:230rpx;
    height:180rpx;
    margin-right:20rpx;
    border-radius:10rpx;
    overflow:hidden;
    position:relative;
    
}
.c-img .ico{
    position: absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    display: flex;
    align-items:center;
    justify-content:center;
    font-size:80rpx;
    color:#fff;

}
.c-img image{
    width:230rpx;
    height:180rpx;

}