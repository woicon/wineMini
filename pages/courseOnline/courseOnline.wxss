/* pages/courseOnline/courseOnline.wxss */

.banners {
    margin: 30rpx;
    height: 368rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.banners img {
    width: 690rpx;
    height: 368rpx;
}

.m-good {
    display: flex;
    flex-wrap: wrap;
    margin: 0 30rpx;
    justify-content: space-between;
}

.m-good>view {
    text-align: center;
    width: 212rpx;
    border-radius: 14rpx;
    overflow: hidden;
    position: relative;
    margin-bottom: 30rpx;
}

.m-good text {
    display: block;
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    padding: 10rpx 0;
    font-size: 26rpx;
}

.m-good>view image {
    width: 210rpx;
    height: 210rpx;
    vertical-align: bottom;
    overflow: hidden;
}

.c-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 30rpx;
}

.c-grid>view {
    text-align: center;
    width: 212rpx;
    border-radius: 14rpx;
    overflow: hidden;
    position: relative;
    margin-bottom: 30rpx;
}

.c-grid .img-txt {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 22rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.5);
    line-height: 40rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.c-grid .img-txt::before {
    content: '';
    display: block;
    border: 8rpx solid transparent;
    border-left-color: #fff;
}

.m-good-img {
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
}

.m-titels {
    text-align: center;
    font-size: 30rpx;
    color: #444;
    line-height: 1.8;
}

.m-name {
    font-size: 34rpx;
    color: #222;
}

.m-tag {
    display: flex;
}

.m-tag>view {
    color: #999;
    font-size: 23rpx;
}

.m-img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100px;
    overflow: hidden;
    margin-right: 20rpx;
}

.m-img image {
    width: 150rpx;
    height: 150rpx;
}

.m-item {
    background: #fff;
    box-shadow: 2px 3px 8px 0 #ebebeb;
    display: flex;
    align-items: center;
    margin: 30rpx;
    padding: 24rpx;
    border-radius: 16rpx;
}

.m-cont {
    flex: 1;
    height:150rpx;
    display: flex;
    flex-direction:column;
    justify-content:space-between;
    
}

.m-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
