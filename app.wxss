/**app.wxss**/
@import "icon.wxss";

page {
    box-sizing: border-box;
}

.flex {
    display: flex;
}

.f-c-c {
    display: flex;
    align-items: center;
    justify-content: center;
}

.f-c-sb {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.c-bar {
    width: 100%;
}

.price {
    color: #af1654;
    font-size: 34rpx;
    margin-right: 20rpx;
}

.price text {
    font-size: 20rpx;
    align-items: center;
}

.price-through {
    color: #666;
    font-size: 30rpx;
    text-decoration: line-through;
}

.button {
    color: #fff;
    background-image: linear-gradient(180deg, rgb(170, 33, 67) 0%, rgb(133, 18, 39) 100%);
    box-shadow: 0px 6px 25px 0px rgba(51, 0, 21, 0.2);
    border-radius: 90px;
    width: 150rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}

.tline, .bline, .rline {
    position: relative;
}

.tline::after, .bline::after, .rline::after, .lline::after {
    content: '';
    display: block;
    height: 1rpx;
    background: #e5e5e5;
    position: absolute;
}

.rline::after {
    transform: scaleY(0.5);
    right: 0;
    top: -50%;
    bottom: -50%;
}

.tline::after {
    left: -50%;
    right: -50%;
    transform: scaleX(0.5);
    top: 0;
}

.bline::after {
    left: -50%;
    right: -50%;
    transform: scaleX(0.5);
    bottom: 0;
}

.banner-dot {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
}

.banner-dot>view {
    display: flex;
    font-size: 0;
    width: 10rpx;
    height: 10rpx;
    background: #eee;
    border-radius: 90px;
    margin: 0 2px;
    transition: 0.4s;
}

.banner-dot>view.active {
    width: 20rpx;
    background: #aaa;
}

.more {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #b9b9b9;
    font-size: 24rpx;
}

.more::after {
    content: '';
    border: 3rpx solid #ddd;
    border-left: none;
    border-bottom: none;
    display: block;
    width: 14rpx;
    height: 14rpx;
    transform: rotate(45deg);
}

.page-title {
    position: relative;
    margin: 40rpx 30rpx;
    font-size: 34rpx;
    line-height: 34rpx;
    padding-left: 20rpx;
    color: #333;
}

.page-title::after {
    content: '';
    display: block;
    top: 0;
    bottom: 0;
    color: #444;
    background: #af1654;
    width: 8rpx;
    border-radius: 8rpx;
    position: absolute;
    left: 0;
}

.online-item {
    padding: 60rpx 30rpx;
    position: relative;
}

.online-item image {
    width: 230rpx;
    height: 180rpx;
    border-radius: 8rpx;
    margin-right: 30rpx;
}

.online-title {
    font-size: 30rpx;
    color: #333;
}

.online-intro {
    color: #666;
    font-size: 26rpx;
    margin-top: 14rpx;
}

.online-price {
    color: #af1654;
    font-size: 14px;
}

.online-info {
    height: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.online-tag {
    position: absolute;
    left: 15rpx;
    top: -8rpx;
}

.online-tag image {
    width: 80rpx;
    height: 80rpx;
}

.online-view {
    font-size: 22rpx;
    color: #999;
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.online-view::before {
    content: '';
    display: block;
    border: 10rpx solid transparent;
    transform: scaleX(1.1);
    border-left-color: #999;
}

.tabs {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    margin: 40rpx 30rpx;
}

.tabs>view {
    padding: 10rpx 0;
    width: 50%;
    line-height: 70rpx;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
}

.tabs .ico {
    margin-right: 15rpx;
}

.tabs>view:first-child {
    border-radius: 90px 0 0 90px;
}

.tabs>view:last-child {
    border-radius: 0 90px 90px 0;
}

.tabs>view.active {
    background: #af1654;
    color: #fff;
}

@keyframes sliderLeft {
    0% {
        transform: scaleX(0);
        transform-origin: 0 0;
    }

    100% {
        transform: scaleX(1);
        transform-origin: 0 0;
    }
}

/* //列表 */

.c-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    position: relative;
}

.c-item::after {
    content: '';
    height: 1px;
    transform: scaleX(0.5);
    border-bottom: 1px solid #eee;
    position: absolute;
    left: -50%;
    right: -50%;
    bottom: 0;
}

.c-item:last-child::after {
    border: none;
}

.c-title {
    font-size: 30rpx;
    color: #333;
}

.c-cont {
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: space-between;
    flex: 1;
    height: 180rpx;
}

.c-sub {
    font-size: 24rpx;
    color: #9b9b9b;
}

.price-through {
    font-size: 24rpx;
}

.c-img {
    width: 230rpx;
    height: 180rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.c-img .ico {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 80rpx;
    color: #fff;
}

.c-view {
    display: flex;
    align-items: center;
    font-size:24rpx;
    color:#999;
    margin-top:10rpx;
}

.c-view::before {
    content: '';
    border: 10rpx solid transparent;
    border-left-color: #999;
}

.c-img image {
    width: 230rpx;
    height: 180rpx;
}
.c-item-col{
    display: block;
    padding:30rpx;
    margin:0 auto;
}

.c-item-col .c-img{
    height: 400rpx;
    width:100%;
}

.c-item-col .c-img image{
    width:100%;
    height: 400rpx;
}
.c-item-col .c-cont{
    height:inherit;
}
.c-item-col .c-img{
    position:relative;
}
.c-item-col .c-img .c-img-ico{
    width:90rpx;
    height:90rpx;
    position:absolute;
    left:20rpx;
    top:-10rpx;
    z-index:2;
}
.c-img-view{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    line-height:70rpx;
    justify-content:flex-end;
    background:rgba(0, 0, 0, .5);
    color:#fff;
    font-size:24rpx;
    padding:0 30rpx;
}
.c-item-col .c-title{
    line-height:90rpx;
}


.list-more{
    font-size:24rpx;
    color:#9B9B9B;
    text-align:center;
    padding:40rpx 0;
}
.list-more-more{
    display: flex;
    align-items:center;
    justify-content:center;
    flex-direction: column;
}
.list-more-more::after{
    content:'';
    display:block;
    width:12rpx;
    height:12rpx;
    border:1px solid #999;
    border-left:none;
    border-top:none;
    transform:rotate(-135deg);
    margin-top:14rpx;
}

/* //商品 */

.g-item {
    background: #fff;
      width:336rpx;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 24rpx 0 rgba(213, 204, 204, 0.50);
    margin-bottom:30rpx;
    overflow:hidden;
}

.g-img image{
    width:336rpx;
    height:336rpx;
}

.g{
    margin:30rpx;
    display: flex;
    flex-wrap:wrap;
    justify-content: space-between;
}

.g-bar{
    display: flex;
    align-items:center;
}
.g-sale{
    font-size:22rpx;
    color:#777;
}
.g-cont{
    padding:20rpx 30rpx;
}
.g-title{
    font-size:26rpx;
    color:#333;
    margin-bottom:20rpx;
}

.tab{
    margin:30rpx 10rpx;
}
.tab swiper{
    width:100%;
    height:80rpx;
}
.tab swiper-item{
    width:30%;
    height:66rpx;
}
.tab view{
    border:1px solid #eee;
    padding:10rpx 20rpx;
    color:#333;
    font-size:26rpx;
    line-height:56rpx;
    margin:0 20rpx;
    justify-content:space-between;
    text-align:center;
    border-radius:4rpx;
}
.tab view.active{
    border:1px solid #AF1654;
    background:#AF1654;
    color:#fff;
}