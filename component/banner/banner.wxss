.banner-dot {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
}

.banner-dot>view {
    display: flex;
    font-size: 0;
    width: 10rpx;
    height: 10rpx;
    background: #eee;
    border-radius: 90px;
    margin: 0 2px;
    transition: 0.4s;
}

.banner image {
    width: 100%;
    height: 368rpx;
    padding: 30rpx 30rpx 0;
    display: block;
    box-sizing: border-box;
}

.banner-dot>view.active {
    width: 20rpx;
    background: #aaa;
}
.banner{
    position:relative;
}
.search{
    position:absolute;
    left:40rpx;
    top:40rpx;
    font-size:30rpx;
    z-index:10;
    width:48rpx;
    height:48rpx;
    color:#fff;
    background:rgba(0, 0, 0, .5);
    display: flex;
    align-items:center;
    justify-content:center;
    border-radius:90px;
}